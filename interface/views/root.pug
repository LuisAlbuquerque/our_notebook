extends layout

block content
    .w3-card-4.modal(id='display')
    table(style='width: 100%')
        tr
            td(style='width: 15%' bgcolor='#a5a5a5')
                table(style='width: 100%; height: 100%')
                    tr(style='vertical-align: top; height: 50%')
                        td(style='vertical-align: top; height: 100%')
                            ul
                                li 
                                    a(href="/root"+path.replace(/\/[^\/]*$/,'')) ..
                                if group.sub_groups
                                    each sub_group in group.sub_groups
                                        li 
                                            a(href="/root"+path+"/" + sub_group)= sub_group
                            center
                                button(onclick="add_group('" + path + "')") +
                    tr(style='vertical-align: bottom; height: 50%')
                        td
                            hr
                            a(href="/") Logout
            td(style='width: 85%')
                table
                    tr
                        button(onclick="swap_elements('" + path + "')") Swap
                        button(onclick="delete_elements('" + path + "')") Delete
                        button(onclick="add_card('" + path + "')") Cria Nota
                        form.w3-container(action="http://localhost:4877/root"+path method="post" enctype="multipart/form-data")
                            label Ficheiro
                            input(id="file" type="file" name="file") 
                            input(type="submit" value="Enviar") 
                            
                    if group.page
                        each card in group.page
                            tr
                                td
                                    case Object.keys(card)[0]
                                        when '_id'
                                            case Object.keys(card)[1]
                                                when 'p'
                                                    p= card.p
                                                when 'h1'
                                                    h1= card.h1
                                                when 'h2'
                                                    h2= card.h2
                                                when 'img'
                                                    img(src=card.img)
                                                when 'pdf'
                                                    embed(src=card.pdf)
                                                when 'file'
                                                    a(href=card.file)= card.file
                                                default
                                                    p better luck next time
                                        when 'p'
                                            p= card.p
                                        when 'h1'
                                            h1= card.h1
                                        when 'h2'
                                            h2= card.h2
                                        when 'img'
                                            img(src=card.img)
                                        default
                                            p better luck next time
                                td
                                    input(type="CheckBox" class="check-box")
