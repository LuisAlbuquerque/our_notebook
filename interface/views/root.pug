extends layout

block content
    .w3-card-4.modal(id='display')
    table(style='width: 100%')
        tr
            td(style='width: 15%' bgcolor='#a5a5a5')
                table(style='width: 100%; height: 100%')
                    tr(style='vertical-align: top; height: 50%')
                        td(style='vertical-align: top; height: 100%')
                            ul
                                li 
                                    a(href="/root"+path.replace(/\/[^\/]*$/,'')) ..
                                each sub_group in group.sub_groups
                                    li 
                                        a(href="/root"+path+"/" + sub_group)= sub_group
                            center
                                button(onclick="addGroup('" + path + "')") +
                    tr(style='vertical-align: bottom; height: 50%')
                        td
                            hr
                            a(href="/") Logout
            td(style='width: 85%')
                table
                    each card in group.page
                        tr
                            td
                                case Object.keys(card)[0]
                                    when 'p'
                                        p= card.p
                                    when 'h1'
                                        h1= card.h1
                                    when 'img'
                                        img(src=card.img)
                                    default
                                        p better luck next time
                            td
                                input(type="CheckBox" class="check-box")
