extends layout

block content
    table
        tr
            td
                ul
                    li 
                        a(href="/root"+path.replace(/\/[^\/]*$/,'')) ..
                    each sub_group in group.sub_groups
                        li 
                            a(href="/root"+path+"/" + sub_group)= sub_group
            td
                each card in group.page
                    case Object.keys(card)[0]
                        when 'p'
                            p= card.p
                        when 'h1'
                            h1= card.h1
                        when 'img'
                            img(src="http://localhost:3000/"+card.img)= card.img
                        default
                            p better luck next time
    hr
    a(href="/") Voltar
